<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="400dp" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="info.expensemanager.expfile.activity.Popup">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/Linear1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/hospital"
            android:layout_height="50dp"
            android:id="@+id/lkl" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Edit Transaction"
            android:textColor="@color/White"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/jkg" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/Linear2"
        android:orientation="horizontal"
        android:layout_below="@+id/Linear1"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/calendar2"
            android:layout_height="50dp"
            android:id="@+id/qq" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Change Transaction"
            android:textColor="@color/DarkRed"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/fff" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/Linear3"
        android:orientation="horizontal"
        android:layout_below="@+id/Linear2"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/category"
            android:layout_height="50dp"
            android:id="@+id/fddf" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Delete Transaction"
            android:textColor="@color/DarkRed"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/kkk" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/Linear4"
        android:orientation="horizontal"
        android:layout_below="@+id/Linear3"
        android:gravity="center_vertical"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/cable"
            android:layout_height="50dp"
            android:id="@+id/fgfd" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Cancel"
            android:textColor="@color/DarkRed"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/fdg" />

    </LinearLayout>
</RelativeLayout>
