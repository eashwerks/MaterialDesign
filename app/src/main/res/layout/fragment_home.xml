<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="info.expensemanager.expfile.activity.HomeFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL1"
        android:orientation="horizontal"
         >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:id="@+id/LB1">
<ImageView
    android:layout_width="wrap_content"
    android:src="@drawable/dashboard"
    android:layout_height="100dp"
    android:id="@+id/IMG1" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Home"
                android:textColor="@color/Black"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:id="@+id/LB2">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/transaction"
                android:layout_height="100dp"
                android:id="@+id/IMG2" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Transaction"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"
                android:id="@+id/jjd" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:id="@+id/LB3">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/incomereport"
                android:layout_height="100dp"
                android:id="@+id/IMG3" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Report"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"
                android:id="@+id/jj" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL2"
        android:layout_below="@+id/LL1"

        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:id="@+id/LB4">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/viewcategory"
                android:layout_height="100dp"
                android:id="@+id/IMG4" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Categories"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"
                android:id="@+id/jkkkj" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:id="@+id/LB5">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/expensereport"
                android:layout_height="100dp"
                android:id="@+id/IMG5" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Chart"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"
                android:id="@+id/hkjsdhf" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:id="@+id/LB6">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/sms"
                android:layout_height="100dp"
                android:id="@+id/IMG6" />
            <TextView
                android:layout_width="wrap_content"
                android:text="SMS"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"
                android:id="@+id/jjssd" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LL3"

        android:layout_below="@+id/LL2"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:id="@+id/LB7">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/hospital"
                android:layout_height="100dp"
                android:id="@+id/IMG7" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Payee"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"
                android:id="@+id/kllk" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:id="@+id/LB8">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/settings"
                android:layout_height="100dp"
                android:id="@+id/IMG8" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Settings"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"
                android:id="@+id/rreh" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:id="@+id/LB9">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/calendar"
                android:layout_height="100dp"
                android:id="@+id/IMG9" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Reminder"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"
                android:id="@+id/rrehkk" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LL4"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/LL3"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"

            android:padding="10dp"
            android:layout_marginTop="35dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="22dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="Available Anmount Rs 100"
                android:layout_height="match_parent"
                android:id="@+id/txtamountview" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
</ScrollView>