<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.expensemanager.expfile.activity.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/LL1"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="3dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content"
            android:id="@+id/LLSMS">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_below="@+id/LL1"
            android:padding="2dp"
            android:src="@drawable/shopping"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/background_material_dark"
                android:layout_marginLeft="15dp"
                android:textSize="20dp"
                android:text="New SMS Provider"
                android:id="@+id/txtitmm" />
        </LinearLayout>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="3dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:id="@+id/LL2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:padding="2dp"
                android:layout_below="@+id/LL1"
                android:src="@drawable/hospital"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background_material_dark"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:text="SMS Provider List"
                    android:id="@+id/ss" />
            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
android:layout_marginTop="20dp"
android:padding="8dp"
        android:background="@color/SlateBlue"
        android:layout_height="wrap_content"
        android:id="@+id/LL3">
<TextView
    android:layout_width="wrap_content"
    android:text="Other Settings"
    android:textColor="#FFFFFF"
    android:layout_height="wrap_content"
    android:id="@+id/jj" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox"

                    android:checked="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background_material_dark"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:text="Track All SMS"
                    android:id="@+id/txtit" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            android:id="@+id/liner_backup"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox2"

                    android:checked="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background_material_dark"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:text="Backup Database "
                    android:id="@+id/txtitj" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            android:id="@+id/liner_auto"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox3"

                    android:checked="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background_material_dark"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:text="Auto Login "
                    android:id="@+id/txtiggtj" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            android:id="@+id/liner_password"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox4"

                    android:checked="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background_material_dark"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:text="Change password "
                    android:id="@+id/txtiggkktj" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            android:id="@+id/liner_trackall"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox5"

                    android:checked="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background_material_dark"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:text="Track all sms "
                    android:id="@+id/txtiggklktj" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/LLB"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll88" />
    </LinearLayout>



</RelativeLayout>