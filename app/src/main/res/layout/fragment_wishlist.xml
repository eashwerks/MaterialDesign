<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.expensemanager.expfile.activity.FriendsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/LL1"
        android:layout_alignParentStart="true"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description"
            android:id="@+id/txtviewcategory" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/txtdescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Amount "
            android:id="@+id/textView4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"

            android:id="@+id/txtamount" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="#5EBA7D"
            android:textColor="#FFFFFF"
            android:id="@+id/btnsubmit"
            android:layout_gravity="center_horizontal" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
android:paddingRight="5dp"
        android:id="@+id/LL2"
        android:orientation="vertical"
android:layout_marginTop="10dp"
        android:layout_below="@+id/LL1"
        android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:text="Remaind me when available amount "
    android:layout_height="wrap_content"
    android:id="@+id/jhj" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:id="@+id/txtamount2" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reminder On"
            android:id="@+id/chkreminder"

            android:checked="false" />
    </LinearLayout>


</RelativeLayout>